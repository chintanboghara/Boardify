# editorconfig.org
# This is the root EditorConfig file. Settings defined here apply to all files
# unless overridden by more specific rules.
root = true

[*]
# Use UTF-16 little-endian encoding for all files.
charset = utf-8
# Use LF for line endings.
end_of_line = lf
# Set indent size to 2 spaces.
indent_size = 2
indent_style = space
# Ensure every file ends with a newline.
insert_final_newline = true
# Remove any trailing whitespace.
trim_trailing_whitespace = true

[*.md]
# For Markdown files, preserve trailing whitespace as it may be intentional.
trim_trailing_whitespace = false
# Enable soft wrapping for Markdown files.
x-soft-wrap-text = true
